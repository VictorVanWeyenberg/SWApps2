<Page
    x:Class="SWApps2.View.EstablishmentListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SWApps2.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    DataContext="{Binding EstablishmentListViewModel, Source={StaticResource Locator}}">

    <Grid>
        <AutoSuggestBox MinWidth="300" Height="40"  x:Name="inputBox"
                        QuerySubmitted="inputBox_QuerySubmitted" SuggestionChosen="inputBox_SuggestionChosen"
                        TextChanged="inputBox_TextChanged" QueryIcon="Find"/>
        <StackPanel x:Name="items">

        </StackPanel>
    </Grid>
</Page>

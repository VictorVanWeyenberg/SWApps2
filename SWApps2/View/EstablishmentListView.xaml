<Page
    x:Class="SWApps2.View.EstablishmentListView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SWApps2.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    xmlns:viewModels="using:SWApps2.ViewModel">

    <StackPanel Orientation="Vertical">
        <AutoSuggestBox MinWidth="300" Height="40"  x:Name="inputBox"
                        QuerySubmitted="inputBox_QuerySubmitted" SuggestionChosen="inputBox_SuggestionChosen"
                        TextChanged="inputBox_TextChanged" QueryIcon="Find"/>
        <ListView x:Name="items"
                  ItemsSource="{x:Bind EstablishmentList.Establishments}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="viewModels:EstablishmentViewModel">
                    <StackPanel Orientation="Horizontal" Padding="10" VerticalAlignment="Top">
                        <Image Width="100px" Height="100px" Source="/Assets/comicsans.jpg"></Image>
                        <StackPanel Orientation="Vertical" Padding="10,0">
                            <TextBlock Text="{x:Bind Name}" FontSize="32"></TextBlock>
                            <TextBlock Text="{x:Bind Address}" FontSize="10" Foreground="#FF1D1D1D"></TextBlock>
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</Page>

<Page
    x:Class="SWApps2.View.EstablishmentView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SWApps2.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    xmlns:viewModels="using:SWApps2.ViewModel"
    DataContext="{Binding Establishment, Source={StaticResource Locator}}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Padding="10,0" FontSize="64" Text="{x:Bind Establishment.Name}" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" />
        <StackPanel Orientation="Vertical" Padding="10" Grid.Row="1">
            <TextBlock Text="{x:Bind Establishment.ServiceHours}" />
            <TextBlock Text="{x:Bind Establishment.Address}" />
        </StackPanel>
        <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="1" Padding="10,0,10,0" HorizontalAlignment="Right">
            <TextBlock FontSize="32" Text="Events" />
            <ListView ItemsSource="{x:Bind Establishment.Events}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="viewModels:EventViewModel">
                        <StackPanel Orientation="Vertical" Padding="10">
                            <TextBlock Text="{x:Bind Name}" FontWeight="Bold" />
                            <TextBlock Text="{x:Bind Interval}" FontWeight="Light" FontSize="9" Foreground="#343434s" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <TextBlock FontSize="32" Text="Promotions" />
            <ListView ItemsSource="{x:Bind Establishment.Promotions}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="viewModels:PromotionViewModel">
                        <StackPanel Orientation="Vertical" Padding="10">
                            <TextBlock Text="{x:Bind Name}" FontWeight="Bold" />
                            <TextBlock Text="{x:Bind Interval}" FontWeight="Light" FontSize="9" Foreground="#343434s" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</Page>

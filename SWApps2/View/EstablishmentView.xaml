<Page
    x:Class="SWApps2.View.EstablishmentView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SWApps2.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    xmlns:viewModels="using:SWApps2.ViewModel"
    xmlns:Maps="using:Windows.UI.Xaml.Controls.Maps"
    DataContext="{Binding Establishment, Source={StaticResource Locator}}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <TextBlock Padding="10,0" FontSize="64" Text="{x:Bind Establishment.Name}" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" />
        <ScrollViewer Grid.Column="0" Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="5*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Maps:MapControl Name="map" MapServiceToken="U7pmYpAbgRHmgVyrHL5s~iOovcTR0_2Ph6QXuv2cW8A~AiH8_GfWmXLz0SrnP8Pq3qgtI-6Bf3XXB3nInhD3986LPt12pOU52AKLQtQrJIk6" Grid.Column="0" Grid.Row="0" />
                <StackPanel Orientation="Vertical" Padding="10" Grid.Row="1">
                    <TextBlock Text="{x:Bind Establishment.Address}" />
                    <TextBlock Text="{x:Bind Establishment.ServiceHours}" />
                </StackPanel>
            </Grid>
        </ScrollViewer>
        <StackPanel Orientation="Vertical" Grid.Column="1" Grid.Row="1" Padding="10,0,10,0">
            <TextBlock FontSize="32" Text="Events" />
            <ListView ItemsSource="{x:Bind Establishment.Events}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="viewModels:EventViewModel">
                        <StackPanel Orientation="Vertical" Padding="10">
                            <TextBlock Text="{x:Bind Name}" FontWeight="Bold" />
                            <TextBlock Text="{x:Bind Interval}" FontWeight="Light" FontSize="9" Foreground="#343434s" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <TextBlock FontSize="32" Text="Promotions" />
            <ListView ItemsSource="{x:Bind Establishment.Promotions}">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="viewModels:PromotionViewModel">
                        <StackPanel Orientation="Vertical" Padding="10">
                            <TextBlock Text="{x:Bind Name}" FontWeight="Bold" />
                            <TextBlock Text="{x:Bind Interval}" FontWeight="Light" FontSize="9" Foreground="#343434s" />
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</Page>
